extends layout

// Define basic data fields using Jadeâ€™s mixin features
// Bind to those data fields for dynamic updates

mixin metric(id,title,footer)
  div(class="panel panel-default",id="#{id}-metric")
    if title
           //div.panel-heading: h1.panel-title= title
           div(class="panel-heading metric")
             h3(align = "center")= title
    div(class="panel-body metric")
           ul(id="#{id}")= " "
    if footer
          div.panel-footer= footer

